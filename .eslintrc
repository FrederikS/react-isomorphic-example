{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "indent": ["error", 4, {"SwitchCase": 1}],
    "comma-dangle": ["error", "never"],
    "prefer-template": "warn",
    "react/prefer-stateless-function": "warn",
    "react/jsx-indent": ["error", 4],
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "semi": ["error", "always"]
  }
}
